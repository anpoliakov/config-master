<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane minHeight="550.0" minWidth="800.0" prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="by.anpoliakov.controllers.TouchScreenCalibrationWithTetheringController">

    <VBox alignment="TOP_CENTER" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <!-- SplitPane для разделения левой и правой частей -->
        <SplitPane dividerPositions="0.5" orientation="HORIZONTAL" VBox.vgrow="ALWAYS">
            <!-- Левая панель: Контейнер для радио-кнопок выбора монитора -->
            <VBox>
                <Label styleClass="medium_text,bold_text" text="Выберите монитор:"/>
                <VBox fx:id="monitorRadioButtonContainer" spacing="5"/>
            </VBox>

            <!-- Правая панель: Контейнер для радио-кнопок выбора устройства -->
            <VBox>
                <Label styleClass="medium_text,bold_text" text="Выберите устройство:"/>
                <VBox fx:id="deviceRadioButtonContainer" spacing="5"/>
            </VBox>
        </SplitPane>

        <!-- Блок с информацией об устройстве (на всю ширину) -->
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label styleClass="medium_text,bold_text" text="Информация об устройстве:"/>
            <TextArea fx:id="deviceInfoArea" editable="false"
                      promptText="Тут отображается информация о выбранном устройстве" styleClass="medium_text"
                      wrapText="true" VBox.vgrow="ALWAYS"/>
        </VBox>

        <!-- Блок с кнопками (на всю ширину) -->
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button styleClass="base_button,small_button" text="Задать"/>
            <Button styleClass="base_button,small_button" text="Удалить"/>
            <Button styleClass="base_button,small_button" text="Сохранить"/>
        </HBox>
    </VBox>
</AnchorPane>
